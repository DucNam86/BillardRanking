<Window x:Class="BillardRanking.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BillardRanking.Views"
        mc:Ignorable="d"
        Title="Thêm người chơi" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Nhập tên người chơi:" Margin="0,0,0,10"/>
        <TextBox x:Name="txtName" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="60" Margin="0,0,10,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Hủy" Width="60" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
